<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esgi.virtualclassroom">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MaterialTheme">
        <activity
            android:theme="@style/MaterialTheme.FullScreen"
            android:name=".modules.login.LogInActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.register.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modules.home.HomeActivity"
            android:label="@string/home_fragment_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modules.classroom.ClassroomActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".modules.classroomcreation.ClassroomCreationActivity"
            android:screenOrientation="portrait"
            />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.esgi.virtualclassroom"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>

        <receiver android:name=".notifications.NotificationPublisher" />
    </application>

</manifest>