<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.register.RegisterActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_username_layout"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/register_username_edit_text"
            android:hint="@string/fragment_log_in_name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_email_layout"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/register_username_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/register_email_edit_text"
            android:hint="@string/fragment_log_in_email_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_password1_layout"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/register_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/register_password1_edit_text"
            android:hint="@string/fragment_log_in_password_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_password2_layout"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/register_password1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/register_password2_edit_text"
            android:hint="@string/fragment_log_in_password_confirm_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/register_validate_button"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="@string/fragment_create_account_button_text"
        app:layout_constraintTop_toBottomOf="@id/register_password2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
